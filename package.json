{
  "name": "rulma",
  "version": "0.0.1",
  "description": "React components for Bulma",
  "main": "lib/index",
  "module": "es/index",
  "jsnext:main": "es/index",
  "files": [
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib es",
    "build": "npm run build:commonjs && npm run build:es",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "prepublish": "npm run clean && npm run build",
    "test": "jest",
    "storybook": "BABEL_ENV=commonjs start-storybook -p 9001 -c .storybook",
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx"
  },
  "keywords": [
    "React",
    "Bulma"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexanbj/rulma.git"
  },
  "author": "Alexander Bjerkan <alexander.bjerkan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexanbj/rulma/issues"
  },
  "homepage": "https://github.com/alexanbj/rulma#readme",
  "dependencies": {
    "classnames": "^2.2.5",
    "lodash": "^4.17.4",
    "react-portal": "^3.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.s?css$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/es/"
    ]
  },
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "babel-cli": "^6.23.0",
    "babel-jest": "^19.0.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "bulma": "^0.3.2",
    "cross-env": "^3.1.4",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "storyshots": "^3.2.2"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
