{
  "name": "rulma",
  "version": "0.0.1",
  "description": "React components for Bulma",
  "main": "lib/index",
  "module": "es/index",
  "jsnext:main": "es/index",
  "files": [
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib es",
    "build": "npm run build:commonjs && npm run build:es",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "prepublish": "npm run clean && npm run build",
    "test": "jest",
    "gh-pages": "npm run storybook:clean && npm run storybook:build && npm run storybook:publish",
    "storybook": "BABEL_ENV=commonjs start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o _gh-pages",
    "storybook:clean": "rimraf _gh-pages",
    "storybook:publish": "git-directory-deploy --directory _gh-pages --branch gh-pages",
    "format": "prettier-eslint --write \"src/**/*.js\" \"src/**/*.jsx\"",
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx"
  },
  "keywords": [
    "React",
    "Bulma"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexanbj/rulma.git"
  },
  "author": "Alexander Bjerkan <alexander.bjerkan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexanbj/rulma/issues"
  },
  "homepage": "https://github.com/alexanbj/rulma#readme",
  "dependencies": {
    "blacklist": "^1.1.4",
    "classnames": "^2.2.5"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.s?css$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/es/"
    ]
  },
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "babel-cli": "^6.24.0",
    "babel-jest": "^19.0.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-react": "^6.23.0",
    "bulma": "^0.4.0",
    "cross-env": "^3.2.4",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "git-directory-deploy": "^1.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "prettier-eslint": "^4.3.2",
    "prettier-eslint-cli": "^3.1.3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "storyshots": "^3.2.2"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
